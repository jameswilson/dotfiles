#!/bin/bash
# Environment Variables
# #####################

#echo "~/.bash_environment"
export PHP_VERSION="5.3"

# HOME folders
#export SVN_HOME="/opt/subversion"
#export MAGICK_HOME="/opt/imagemagick"
#export MACPORT_HOME="/opt/local"
export DEVEL_HOME="/Developer"
export MAMP_HOME="/Applications/MAMP"
export PHP_HOME="$MAMP_HOME/bin/php$PHP_VERSION"

# NODEJS
export NODE_PATH="/usr/local/lib/node"
export NPM_HOME="/usr/local/lib/node_modules/npm"

# DRUSH
export DRUSH_PHP="$PHP_HOME/bin/php"

# PATH
#export PATH="$SVN_HOME/bin:$PATH"
#export PATH="$MAGICK_HOME/bin:$PATH"
#export PATH="$MYSQL_HOME/bin:$PATH"
#export PATH="$MACPORT_HOME/bin:$MACPORT_HOME/sbin:$PATH"
export PATH="$DEVEL_HOME/Tools:$PATH"
export PATH="$MAMP_HOME/bin:$PATH"
export PATH="$MAMP_HOME/Library/bin:$PATH"
export PATH="$PHP_HOME/bin:$PATH"
export PATH="$NPM_HOME/bin:$PATH"

# MANPATH
#export MANPATH="$MANPATH:$MACPORT_HOME/share/man"
#export MANPATH="$MANPATH:$MAGICK_HOME/share/man"
#export MANPATH="$MANPATH:$MYSQL_HOME/man"
#export MANPATH="$SVN_HOME/man:$MANPATH"
export MANPATH="$MANPATH:$MAMP_HOME/Library/share/man"
export MANPATH="$MANPATH:$DEVEL_HOME/share/man"
# MISC 

# 
# 1.   directory
# 2.   symbolic link
# 3.   socket
# 4.   pipe
# 5.   executable
# 6.   block special
# 7.   character special
# 8.   executable with setuid bit set
# 9.   executable with setgid bit set
# 10.  directory writable to others, with sticky bit
# 11.  directory writable to others, without sticky bit

export LSCOLORS="ExGxAxdxbxAxAxBxBxacac"

# 
# a     black
# b     red
# c     green
# d     brown
# e     blue
# f     magenta
# g     cyan
# h     light grey
# A     bold black, usually shows up as dark grey
# B     bold red
# C     bold green
# D     bold brown, usually shows up as yellow
# E     bold blue
# F     bold magenta
# G     bold cyan
# H     bold light grey; looks like bright white
# x     default foreground or background


#'no=00:fi=00:di=01;34:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'

# prevent Mac OSX dot-underscore in tarfiles.
export COPYFILE_DISABLE=true

export EDITOR="vim"
export SVN_EDITOR="vim"
export DYLD_LIBRARY_PATH="$MAGICK_HOME/lib"
