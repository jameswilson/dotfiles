#!/usr/bin/env bash
# ~/.bash_enviroment: custom bashrc hepler to initialize environment variables

# Software Versions
export PHP_VERSION="5.5.26"

# Default Editor
export EDITOR="vim"

# AMPPS
# export AMPPS_HOME="/Applications/AMPPS"
# PATH=$AMPPS_HOME/apache/bin:$PATH
# PATH=$AMPPS_HOME/extra/bin:$PATH
# PATH=$AMPPS_HOME/mongodb/bin:$PATH
# PATH=$AMPPS_HOME/mysql/bin:$PATH
# PATH=$AMPPS_HOME/perl/bin:$PATH
# PATH=$AMPPS_HOME/python/bin:$PATH
# MANPATH=$MANPATH:$AMPPS_HOME/apache/man
# MANPATH=$MANPATH:$AMPPS_HOME/extra/etc/openssl/man
# MANPATH=$MANPATH:$AMPPS_HOME/extra/man
# MANPATH=$MANPATH:$AMPPS_HOME/extra/share/man
# MANPATH=$MANPATH:$AMPPS_HOME/mysql/man
# MANPATH=$MANPATH:$AMPPS_HOME/perl/man
# MANPATH=$MANPATH:$AMPPS_HOME/php/php/man
# MANPATH=$MANPATH:$AMPPS_HOME/python/share/man

# Devel
export DEVEL_HOME="/Developer"
PATH="$DEVEL_HOME/Tools:$PATH"
MANPATH="$MANPATH:$DEVEL_HOME/share/man"

# Adobe Font Developer Kit cli tools.
export FDK_EXE="/usr/local/FDK/Tools/osx"
PATH=$PATH:$FDK_EXE

# Mamp
export MAMP_HOME="/Applications/MAMP"
PATH=$MAMP_HOME/bin:$PATH
PATH=$MAMP_HOME/Library/bin:$PATH
MANPATH=$MANPATH:$MAMP_HOME/Library/share/man

# PHP
export PHP_HOME="$MAMP_HOME/bin/php/php$PHP_VERSION"
#export PHP_HOME="/usr/local/php5"
#export PHP_HOME="$AMPPS_HOME/php"
PATH=$PHP_HOME/bin:$PATH

# Composer
PATH=$HOME/.composer/vendor/bin:$PATH

# Homebrew
PATH=/usr/local/bin:$PATH

# Drush
export DRUSH_PHP="$PHP_HOME/bin/php"

# NodeJS
export NODE_PATH="/usr/local/lib/node"
export NPM_HOME="/usr/local/lib/node_modules/npm"

# NVM
export NVM_DIR="~/.nvm"

# RVM
PATH=$PATH:$rvm_path/bin

# SVN
export SVN_EDITOR=$EDITOR

# Docker
if [ "`docker-machine status dev1`" == "Running" ]
  eval "$(docker-machine env dev1)"
fi
