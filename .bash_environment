#!/usr/bin/env bash
# ~/.bash_enviroment: custom bashrc hepler to initialize environment variables

# Software Versions
export PHP_VERSION="5.6.10"
alias php51='/Applications/MAMP/bin/php/php5.1.6/bin/php'
alias php52='/Applications/MAMP/bin/php/php5.2.17/bin/php'
alias php53='/Applications/MAMP/bin/php/php5.3.29/bin/php'
alias php54='/Applications/MAMP/bin/php/php5.4.42/bin/php'
alias php55='/Applications/MAMP/bin/php/php5.5.26/bin/php'
alias php56='/Applications/MAMP/bin/php/php5.6.10/bin/php'
alias php70='/Applications/MAMP/bin/php/php7.0.0/bin/php'


# Default Editor
export EDITOR="vim"

# Home bin
PATH=$PATH:$HOME/bin

# Devel
export DEVEL_HOME="/Developer"
PATH="$DEVEL_HOME/Tools:$PATH"
MANPATH="$MANPATH:$DEVEL_HOME/share/man"

# Mamp
export MAMP_HOME="/Applications/MAMP"
PATH=$MAMP_HOME/bin:$PATH
PATH=$MAMP_HOME/Library/bin:$PATH
MANPATH=$MANPATH:$MAMP_HOME/Library/share/man

# PHP
export PHP_HOME="$MAMP_HOME/bin/php/php$PHP_VERSION"
#export PHP_HOME="/usr/local/php5"
#export PHP_HOME="$AMPPS_HOME/php"
PATH=$PHP_HOME/bin:$PATH

# Composer
PATH=$HOME/.composer/vendor/bin:$PATH
PATH=/Users/jameswilson/Projects/Bluespark/SO/vendor/bin:$PATH

# Homebrew
export HOMEBREW_HOME=/usr/local/Cellar
PATH=/usr/local/bin:$PATH

# brew install php-version ftw!
source $(brew --prefix php-version)/php-version.sh && php-version 7.0.6
export PHP_VERSIONS="$MAMP_HOME/bin/php/php7.0.0 $MAMP_HOME/bin/php/php5.4.42 $MAMP_HOME/bin/php/php5.6.10 $MAMP_HOME/bin/php/php5.5.26 /usr/local/Cellar/php70/7.0.6"

# Java 
export set JAVA_HOME=/usr/local/java

# Drush
export DRUSH_PHP="$PHP_HOME/bin/php"

# NodeJS
export NODE_PATH="/usr/local/lib/node"
export NPM_HOME="/usr/local/lib/node_modules/npm"

# NVM
export NVM_DIR="~/.nvm"

# RVM
PATH=$PATH:$rvm_path/bin

# SVN
export SVN_EDITOR=$EDITOR

